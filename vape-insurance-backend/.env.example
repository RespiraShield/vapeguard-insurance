# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vape-insurance
MONGODB_TEST_URI=mongodb://localhost:27017/vape-insurance-test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Razorpay Configuration (for payment processing)
# Get these from your Razorpay Dashboard: https://dashboard.razorpay.com/
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here

# Email Configuration (for OTP verification)
# Resend Configuration (RECOMMENDED - Free tier: 3,000 emails/month)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=onboarding@resend.dev

# SendGrid Configuration (Alternative - Free tier: 100 emails/day)
# SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
# SENDGRID_FROM_EMAIL=your-verified-email@gmail.com

# Common email config
FROM_EMAIL=onboarding@resend.dev
FROM_NAME=VapeGuard Insurance

# SMS Configuration (for phone OTP - optional, currently simulated)
# SMS_API_KEY=your_sms_api_key_here
# SMS_SENDER_ID=VAPEGD/

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
# Payment feature flag - set to false to disable payment processing temporarily
PAYMENT_ENABLED=false

# Bill photo upload feature flag - set to true to enable bill photo upload requirement
BILL_PHOTO_ENABLED=false
